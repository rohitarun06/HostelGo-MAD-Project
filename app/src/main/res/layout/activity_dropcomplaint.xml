<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hostel"
    tools:context=".DropComplaint">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="483dp"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="568dp"
        android:text="Complaint Box!!"
        android:textAlignment="center"
        android:textColor="@color/DarkPurple"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/complaintRoomNo"
        android:layout_width="475dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="365dp"
        android:hint="Enter  RoomNo/FloorNo" />

    <EditText
        android:id="@+id/complaintDesc"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="233dp"
        android:ems="10"
        android:hint="Enter your Complaint Description" />

    <Button
        android:id="@+id/complaintButton"
        android:layout_width="301dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/DarkPurple"
        android:text="Rise Complaint"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/complaintDate"
        android:layout_width="238dp"
        android:layout_height="69dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="459dp"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:inputType="date" />

</RelativeLayout>
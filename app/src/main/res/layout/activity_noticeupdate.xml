<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hostel"
    tools:context=".noticeupdate">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="483dp"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="617dp"
        android:text="Notice Board!!"
        android:textAlignment="center"
        android:textColor="@color/DarkPurple"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/noticeTitle"
        android:layout_width="475dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="411dp"
        android:hint="Enter Notice Title" />

    <EditText
        android:id="@+id/noticeContent"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="253dp"
        android:ems="10"
        android:hint="Enter Notice Content" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="301dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="98dp"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/DarkPurple"
        android:text="Upload Notice"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/noticeDate"
        android:layout_width="245dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="526dp"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:inputType="date" />

    <Button
        android:id="@+id/deleteNoticeButton"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/DarkPurple"
        android:text="Delete Notice"
        android:textSize="18sp" />

</RelativeLayout>